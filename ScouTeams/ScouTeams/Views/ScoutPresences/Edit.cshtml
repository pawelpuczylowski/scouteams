@model ScouTeams.Models.ScoutPresence

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScoutPresenceId" />
            <input type="hidden" asp-for="ScoutId" />
            <input type="hidden" asp-for="MeetingId" />
            
            <div class="form-group">
                <label asp-for="Presence" class="control-label"></label>
                <select asp-for="Presence"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Presence>()">
                    <option>Wybierz jeden...</option>
                </select>
                <span asp-validation-for="Presence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="MeetingId">Wróć</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
