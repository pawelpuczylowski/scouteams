@model ScouTeams.ViewModels.ScoutViewModel
@using ScouTeams.Areas.Identity.Data;
@{
    ViewData["Title"] = "EditScoutDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditScoutDegree">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ScoutDegree" class="control-label"></label>
                <select asp-for="ScoutDegree"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<ScoutDegree>()">
                    <option>Wybierz jeden...</option>
                </select>
                <span asp-validation-for="ScoutDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstructorDegree" class="control-label"></label>
                <input asp-for="InstructorDegree" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <input type="submit" value="Nadaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="ShowAssignments">Anuluj</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
