@model ScouTeams.ViewModels.ScoutViewModel
@using ScouTeams.ViewModels
@{
    ViewData["Title"] = "AddFunctionScout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFunctionScout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ThisOrganizationId" />
            <input type="hidden" asp-for="ThisTypeOrganization" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="functionName" class="control-label"></label>
                <select asp-for="functionName"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<FunctionName>()">
                    <option>Wybierz jeden...</option>
                </select>
                <span asp-validation-for="functionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Nadaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>
    @if (ViewData["TypeOrganization"].ToString() == TypeOrganization.KwateraGlowna.ToString())
    {
        <a asp-action="ShowKwateraGlowna">Anuluj</a>
    }
    else if (ViewData["TypeOrganization"].ToString() == TypeOrganization.Choragiew.ToString())
    {
        <a asp-action="ShowChoragiew">Anuluj</a>
    }
    else if (ViewData["TypeOrganization"].ToString() == TypeOrganization.Hufiec.ToString())
    {
        <a asp-action="ShowHufiec">Anuluj</a>
    }
    else if (ViewData["TypeOrganization"].ToString() == TypeOrganization.Druzyna.ToString())
    {
        <a asp-action="ShowDruzyna">Anuluj</a>
    }
    else if (ViewData["TypeOrganization"].ToString() == TypeOrganization.Zastep.ToString())
    {
        <a asp-action="ShowZastep">Anuluj</a>
    }
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
