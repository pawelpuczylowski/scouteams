@model IEnumerable<ScouTeams.Models.Meeting>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="ShowZastep" asp-controller="Home">Wróć</a>
</p>
<p>
    <a asp-action="CreateMeeting" asp-route-id="@ViewData["OrganizationId"]">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MeetingId">Edytuj datę</a> |
                    <a asp-action="Index" asp-controller="ScoutPresences" asp-route-id="@item.MeetingId">Obecności</a>
                </td>
            </tr>
        }
    </tbody>
</table>
